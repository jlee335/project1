<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Contacts.Contact_Details"
    tools:showIn="@layout/activity_contact__details">


    <TextView
        android:id="@+id/dispNumber"
        android:layout_width="251dp"
        android:layout_height="61dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:gravity="center|left"
        android:textAlignment="gravity"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dispName"
        app:layout_constraintTop_toBottomOf="@+id/dispName"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/dispName"
        android:layout_width="252dp"
        android:layout_height="62dp"
        android:layout_marginBottom="200dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:gravity="center|left"
        android:textAlignment="gravity"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:background="#ffffff"
        android:elevation="10dp"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="@+id/editName"
        app:layout_constraintEnd_toStartOf="@+id/editName" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="252dp"
        android:layout_height="61dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:textIsSelectable="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dispName"
        app:layout_constraintEnd_toEndOf="@+id/dispName"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="@+id/dispName"
        app:layout_constraintTop_toTopOf="@+id/dispName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="252dp"
        android:layout_height="59dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:ems="10"
        android:inputType="phone"
        android:selectAllOnFocus="true"
        android:textIsSelectable="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dispNumber"
        app:layout_constraintEnd_toEndOf="@+id/dispNumber"
        app:layout_constraintStart_toStartOf="@+id/dispNumber"
        app:layout_constraintTop_toTopOf="@+id/dispNumber" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="419dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:background="#ffffff"
        android:elevation="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/editName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:src="@drawable/phone"
        app:layout_constraintBottom_toBottomOf="@+id/dispNumber"
        app:layout_constraintEnd_toStartOf="@+id/dispNumber" />


</androidx.constraintlayout.widget.ConstraintLayout>